{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "allowJs": true,
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
    "exclude": [
        "./node_modules"
    ],
    "include": [
        "./src/**/*"
    ],
}